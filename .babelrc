{
  "presets": ["@selfpub/babel-preset"],
  "env": {
    "development": {
      "plugins": [
        [
          "babel-plugin-styled-components",
          { 
            "ssr": true,
            "displayName": true,
            "minify": false,
          }
        ]
      ],
    },
    "production": {
      "plugins": [
        [
          "babel-plugin-styled-components",
          {
            "ssr": true,
            "displayName": false,
            "pure": true,
          }
        ]
      ],
    }
  }
}

